    // progress / task list
    section
      .container-fluid
        .row
          .col-xl-10.col-lg-9.col-md-8.ml-auto
            .row.mb-4.align-items-center
              .col-12.mb-4.mb-xl-0
                h3.text-muted.text-center.mb-3 Database UI
                |                 
                .bg-light.text-dark.p-4.rounded
                  table.table.table-bordered
                    thead
                      tr
                        th(scope='col') #
                        |                         
                        th(scope='col') timeCaptured
                        |                         
                        th(scope='col') videoData
                        |                         
                        th(scope='col') audioData
                        |                         
                        th(scope='col') tempData
                    |                     
                    tbody
                      each record in records
                        tr
                          th(scope='row')=record._id
                          |                         
                          td=record.timestamps
                          |                         
                          td=record.image 
                          |                         
                          td=record.audio
                          |                         
                          td=record.temperature
                        |                                        
                  // pagination
                  // end of pagination
    // end of progress / task list
    // activities
    section
      .container-fluid
        .row
          .col-xl-10.col-lg-9.col-md-8.ml-auto
            .row.align-items-center.mb-5
              .col-xl-12
                h4.text-muted.text-center.mb-4 Recent User Autonomy Notifications
                |           
                      
                #accordion
                  each item in notifications
                    .card
                      .card-header
                        button.btn.btn-block.bg-dark.text-light.text-left(data-toggle='collapse', data-target='#{item._id}')
                          img.mr-3.rounded(src='../images/user1.png', width='35')
                          |                         User 1 Autonomy Activity
                      |                     
                      item._id.collapse.show(data-parent='#accordion')
                        .card-body=item.message              
                        
                                    
                                
                  
