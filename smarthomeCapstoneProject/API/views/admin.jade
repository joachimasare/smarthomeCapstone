  body
    // navbar
    nav.navbar.navbar-expand-md.navbar-light
      button.navbar-toggler.ml-auto.mb-2.bg-light(type='button', data-toggle='collapse', data-target='#myNavbar')
        span.navbar-toggler-icon
      |       
      #myNavbar.collapse.navbar-collapse
        .container-fluid
          .row
            // sidebar
            .col-xl-2.col-lg-3.col-md-4.sidebar.fixed-top
              a.navbar-brand.text-white.d-block.mx-auto.text-center.py-3.mb-4.bottom-border(href='#') Smart Home
              |               
              .bottom-border.pb-3
                img.rounded-circle.mr-3(src='../images/admin.jpg', width='50')
                |                 
                a.text-white(href='#') Joachim Asare
              |               
              ul.navbar-nav.flex-column.mt-4
                li.nav-item
                  a.nav-link.text-white.p-3.mb-2.current(href='#')
                    i.fas.fa-home.text-light.fa-lg.mr-3
                    | Dashboard
                |                 
                li.nav-item
                  a.nav-link.text-white.p-3.mb-2.sidebar-link(href='#')
                    i.fas.fa-user.text-light.fa-lg.mr-3
                    | Account
                |                 
                li.nav-item
                  a.nav-link.text-white.p-3.mb-2.sidebar-link(href='#')
                    i.fas.fa-camera.text-light.text-center.fa-lg.mr-3
                    | Sensors
                |                 
                li.nav-item
                  a.nav-link.text-white.p-3.mb-2.sidebar-link(href='#')
                    i.fas.fa-database.text-light.fa-lg.mr-3
                    | Database
                |                 
                li.nav-item
                  a.nav-link.text-white.p-3.mb-2.sidebar-link(href='#')
                    i.fas.fa-bell.text-light.fa-lg.mr-3
                    | User Autonomy Notifications
            // end of sidebar
            // top-nav
            .col-xl-10.col-lg-9.col-md-8.ml-auto.bg-dark.fixed-top.py-2.top-navbar
              .row.align-items-center
                .col-md-4
                  h4.text-light.text-uppercase.mb-0 Admin Dashboard
                |                 
                .col-md-5
                  form
                |                 
                .col-md-3
                  ul.navbar-nav
                    li.nav-item.icon-parent
                      a.nav-link.icon-bullet(href='#')
                        i.fas.fa-comments.text-muted.fa-lg
                    |                     
                    li.nav-item.icon-parent
                      a.nav-link.icon-bullet(href='#')
                        i.fas.fa-bell.text-muted.fa-lg
                    |                     
                    li.nav-item.ml-md-auto
                      a.nav-link(href='#', data-toggle='modal', data-target='#sign-out')
                        i.fas.fa-sign-out-alt.text-danger.fa-lg
            // end of top-nav
    // end of navbar
    // modal
    #sign-out.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title Want to leave?
            |             
            button.close(type='button', data-dismiss='modal') &times;
          |           
          .modal-body
            | Press logout to leave
          |           
          .modal-footer
            button.btn.btn-success(type='button', data-dismiss='modal') Stay Here
            |             
            button.btn.btn-danger(type='button', data-dismiss='modal') Logout
    // end of modal
    // cards
    section
      .container-fluid
        .row
          .col-xl-10.col-lg-9.col-md-8.ml-auto
            .row.pt-md-5.mt-md-3.mb-5
              .col-xl-3.col-sm-6.p-2
                .card.card-common
                  .card-body
                    .d-flex.justify-content-between
                      i.fas.fa-users.fa-3x.text-warning
                      |                       
                      .text-right.text-secondary
                        h5 Users
                        |                         
                        h3 1
                  |                   
                  .card-footer.text-secondary
                    i.fas.fa-sync.mr-3
                    |                     
                    span Updated Now
              |               
              .col-xl-3.col-sm-6.p-2
                .card.card-common
                  .card-body
                    .d-flex.justify-content-between
                      i.fas.fa-home.fa-3x.text-success
                      |                       
                      .text-right.text-secondary
                        h5 IoT Homes
                        |                         
                        h3 1
                  |                   
                  .card-footer.text-secondary
                    i.fas.fa-sync.mr-3
                    |                     
                    span Updated Now
              |               
              .col-xl-3.col-sm-6.p-2
                .card.card-common
                  .card-body
                    .d-flex.justify-content-between
                      i.fas.fa-users.fa-3x.text-info
                      |                       
                      .text-right.text-secondary
                        h5 Sensors
                        |                         
                        h3 4
                  |                   
                  .card-footer.text-secondary
                    i.fas.fa-sync.mr-3
                    |                     
                    span Updated Now
              |               
              .col-xl-3.col-sm-6.p-2
                .card.card-common
                  .card-body
                    .d-flex.justify-content-between
                      i.fas.fa-cogs.fa-3x.text-danger
                      |                       
                      .text-right.text-secondary
                        h5 Tranducers
                        |                         
                        h3 4
                  |                   
                  .card-footer.text-secondary
                    i.fas.fa-sync.mr-3
                    |                     
                    span Updated Now
