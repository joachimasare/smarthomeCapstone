    // modal
    #sign-out.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title Want to leave?
            |             
            button.close(type='button', data-dismiss='modal') &times;
          |           
          .modal-body
            | Press logout to leave
          |           
          .modal-footer
            button.btn.btn-success(type='button', data-dismiss='modal') Stay Here
            |             
            button.btn.btn-danger(type='button', data-dismiss='modal') Logout
