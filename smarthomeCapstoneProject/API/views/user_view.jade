    // live database for user view
    section
      .container-fluid
        .row
          .col-xl-10.col-lg-9.col-md-8.ml-auto
            .row.mb-4.align-items-center
              .col-12.mb-4.mb-xl-0
                .bg-light.text-dark.p-4.rounded
                  table.table.table-bordered
