                      tr
                        th(scope='col') #
                        |                           
                        th(scope='col') time_captured
                        |                           
                        th(scope='col') video_data
                        |                           
                        th(scope='col') audio_data
                        |                           
                        th(scope='col') temp_data
                    |                       
                    tbody
                      each record in records
                        tr
                          th(scope='row')=record._id
                          |                           
                          td=record.timestamps
